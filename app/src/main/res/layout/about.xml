<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp" android:gravity="center">
        <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp">

            <com.dertyp7214.applicationmanager.components.MaskedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/ic_launcher_background"
                    app:mask="@drawable/icon_shape"
                    android:id="@+id/icon_bg" android:layout_margin="8dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher_foreground"
                    android:id="@+id/ic_fg"
                    android:contentDescription="@string/todo"/>
        </FrameLayout>
        <TextView
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/appName"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"/>
        <TextView
                android:text="@string/version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_version"
                android:textAlignment="center"
                android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dev_dertyp">
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp" app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/profile_dertyp" android:layout_weight="1" android:layout_margin="15dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
            />
            <TextView
                    android:text="@string/dertyp7214"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_dertyp"
                    android:layout_weight="5"
                    android:textSize="17sp"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/profile_dertyp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>